<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="org.naturenet.ui.CommunitiesFragment">

    <include
        layout="@layout/floating_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/floating_buttons" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/floating_buttons"
        android:id="@+id/communities_list"
        android:layout_below="@+id/searchText" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/people"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView" />

    <TextView
        android:text="@string/people_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:gravity="center"
        android:id="@+id/people_tv_communities"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textColor="@color/colorButton"
        android:layout_alignBottom="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorButton"
        android:layout_toRightOf="@+id/people_tv_communities"
        android:layout_toEndOf="@+id/people_tv_communities"
        android:id="@+id/communities_num_people"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/communities_list" />

    <TextView
        android:gravity="center_vertical"
        android:textColor="@color/colorButton"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/communities_num_people"
        android:layout_toEndOf="@+id/communities_num_people"
        android:layout_above="@+id/communities_list"
        android:layout_alignParentTop="true"
        android:id="@+id/people_count_tv_communities" />

    <EditText
        android:id="@+id/searchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/searchButton"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName" />

</RelativeLayout>